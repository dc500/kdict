!!! 5
html
  head
    -if (typeof(title) !== 'undefined')
      title KDict - #{title}
    -else
      title KDict
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/fonts.css')
    link(rel='shortcut icon', href='favicon.ico')
    // TODO: iOS shortcut icon
    link(rel='apple-touch-icon', href='images/ios.png')

    script(src='/javascripts/jquery-1.6.2.min.js')
    script(src='/javascripts/korean.js')
    script(src='/javascripts/gui.js')
  body
    #center
      h1.fontface.title 
        a(href='/') KDict
      #menu
        ul.right
          - if (typeof currentUser !== 'undefined')
            li.username= currentUser.username
            li
              a(href='/logout', class='logout') Log Out
          - else
            li
              a(href='/signup', class='signup') Sign up
            li
              a(href='/login', class='login') Login

        ul
          li
            a(href='/') Search
          li
            a(href='/contribute/') Contribute
          li
            a(href='/download/') Download
          li
            a(href="/entries/new") + Add Entry

      != messages()
 
      !=body

      #footer
        ul
          li
            a(href='/about/') About
