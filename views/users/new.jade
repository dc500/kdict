.page-header
  h1=title

.row
  .span16
    form(method='post', action='/signup')
      fieldset
        div.clearfix
          label(for='user[email]') Email
          div.input
            input(name='user[email]')

        div.clearfix
          label(for='user[username]') Username
          div.input
            input(name='user[username]')
    
        div.clearfix
          label(for='user[password]') Password
          div.input
            input(name='user[password]', type='password')

        div.clearfix
          label(for='user[confirmPassword]') Confirm password
          div.input
            input(name='user[confirmPassword]', type='password')
    
        div.actions
          input(type='submit', value='Sign up', class="btn primary large") 
          | 
          button(type='reset', class="btn") Clear

